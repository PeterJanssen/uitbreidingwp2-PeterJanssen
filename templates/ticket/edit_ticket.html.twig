{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block title %}Edit Ticket{% endblock %}

{% block content %}
    <h1 class="font-weight-light">Edit ticket {{ ticket_name }}</h1>
    {{ form_start(edit_form) }}

    <div class="form-group" id="nameFormGroup">
        {{ form_label(edit_form.name, 'Give a new name to this complaint:') }}
        {{ form_widget(edit_form.name) }}
    </div>

    <div class="form-group" id="descriptionFormGroup">
        {{ form_label(edit_form.description, 'Give a new description to this complaint:') }}
        {{ form_widget(edit_form.description) }}
    </div>

    <button class="btn btn-outline-success" name="editBtn">Edit Ticket</button>
    {{ form_end(edit_form) }}
{% endblock %}
