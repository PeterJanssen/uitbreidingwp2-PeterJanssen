{% extends 'base.html.twig' %}

{% block title %}Register new user{% endblock %}

{% block content %}
    <h1 class="font-weight-light">Register new user</h1>

    {{ form_start(register_form) }}
        <div class="form-group">
            {{ form_label(register_form.email) }}
            {{ form_widget(register_form.email) }}
        </div>
        <div class="form-group">
            {{ form_label(register_form.plaintextPassword, 'Password') }}
            {{ form_widget(register_form.plaintextPassword) }}
        </div>
        <div class="form-group">
            {{ form_label(register_form.roles) }}
            {{ form_widget(register_form.roles) }}
        </div>

        <button class="btn btn-outline-success">Register new user</button>
    {{ form_end(register_form) }}<br>
    <a href="{{ url('admin_dashboard') }}"><button class="btn btn-outline-primary">Back to dashboard</button></a>
{% endblock %}
